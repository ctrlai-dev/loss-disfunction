---
import { getCollection } from "astro:content";

// Load directives collection, sort by ID
const allDirectives = await getCollection("directives");
const directives = allDirectives.sort((a, b) => a.data.id.localeCompare(b.data.id));

// Pre-render all directive content
const directivesWithContent = await Promise.all(
  directives.map(async (directive) => ({
    ...directive,
    renderedContent: await directive.render()
  }))
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CSN Directives — Official Documentation</title>
    <link rel="stylesheet" href="../styles/document.css" />
  </head>
  <body class="document-layout">
    <div class="document-container">
      {directivesWithContent.map((directive) => (
        <div class="directive-document">
          <!-- Document Header -->
          <header class="document-header">
            <div class="header-info">
              <h1 class="document-title">{directive.data.title}</h1>
              <div class="document-meta">
                <span class="meta-item">ID: {directive.data.id}</span>
                <span class="meta-item">Category: {directive.data.category}</span>
                <span class="meta-item">Year: {directive.data.year}</span>
                <span class="meta-item">Status: {directive.data.status}</span>
                <span class="meta-item">Classification: {directive.data.classification}</span>
                {directive.data.issuedBy && <span class="meta-item">Issued By: {directive.data.issuedBy}</span>}
              </div>
            </div>
          </header>

          <!-- Document Body -->
          <div class="document-body">
            <directive.renderedContent.Content />
          </div>

          <!-- Document Footer -->
          <footer class="document-footer">
            <div class="footer-info">
              <p class="footer-text">CSN Official Document • Classification: {directive.data.classification} • {directive.data.year}</p>
              <p class="footer-text">Civil Synthesis Network • All Rights Reserved</p>
            </div>
          </footer>
        </div>
      ))}
    </div>
  </body>
</html>

<style>
  body {
    margin: 0;
    background: #f5f5f5;
    font-family: 'Georgia', 'Times New Roman', serif;
  }

  .document-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .directive-document {
    background: white;
    padding: 60px;
    margin-bottom: 40px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    page-break-after: always;
  }

  .document-header {
    border-bottom: 3px solid #000;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
  }

  .document-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .document-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    font-size: 0.9rem;
    color: #666;
  }

  .meta-item {
    border-right: 1px solid #ccc;
    padding-right: 1rem;
  }

  .meta-item:last-child {
    border-right: none;
  }

  .document-body {
    font-size: 11pt;
    line-height: 1.5;
    color: #000;
  }

  .document-body p {
    margin: 0.75rem 0;
    text-align: justify;
  }

  .document-body h2 {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 2rem 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    border-bottom: 2px solid #000;
    padding-bottom: 0.5rem;
  }

  .document-body h3 {
    font-size: 1.25rem;
    font-weight: bold;
    margin: 1.5rem 0 0.75rem 0;
    font-style: italic;
  }

  .document-body h4 {
    font-size: 1rem;
    font-weight: bold;
    margin: 1rem 0 0.5rem 0;
  }

  .document-body strong {
    font-weight: bold;
  }

  .document-body em {
    font-style: italic;
  }

  .document-body ul, .document-body ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .document-body li {
    margin: 0.5rem 0;
  }

  .document-body blockquote {
    margin: 1.5rem 0;
    padding: 1rem 2rem;
    border-left: 4px solid #000;
    background: #f9f9f9;
    font-style: italic;
  }

  .document-footer {
    border-top: 2px solid #000;
    padding-top: 1rem;
    margin-top: 3rem;
    text-align: center;
    font-size: 0.85rem;
    color: #666;
  }

  .footer-text {
    margin: 0.25rem 0;
  }

  @media print {
    .directive-document {
      box-shadow: none;
      margin-bottom: 0;
    }
  }
</style>

