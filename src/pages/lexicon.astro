---
import AppShell from "@/layouts/AppShell.astro";
import glossary from "@/data/glossary.json";

const terms = [...glossary].sort((a, b) => a.term.localeCompare(b.term));
---

<AppShell title="Lexicon â€” LOSS DISFUNCTION">
  <section class="relative min-h-screen">
    <div class="container py-12 max-w-3xl">
      <h1 class="text-4xl font-bold page-h1 mb-2">Lexicon</h1>
      <p class="text-muted mb-8">A reference for terms used across the CSN, Seed Protocol, and the world of Loss Disfunction.</p>

      <div class="divide-y divide-[#1a1a26] rounded-xl border border-[#1a1a26] bg-[#0b0b12]/60">
        {terms.map(({ term, def }) => (
          <div class="p-4">
            <div class="font-semibold text-cyan">{term}</div>
            <div class="text-sm text-muted mt-1">{def}</div>
          </div>
        ))}
      </div>
    </div>
  </section>
</AppShell>


