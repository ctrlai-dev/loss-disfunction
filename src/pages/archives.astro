---
import Base from "@/layouts/Base.astro";
import BackgroundMist from "@/components/BackgroundMist.astro";
import { getCollection } from "astro:content";

// Load archives collection, sort but don't pre-render
const archives = (await getCollection("archives")).sort((a, b) => a.data.id.localeCompare(b.data.id));
---

<style>
  /* Subtle console grid + glow */
  .grid-bg {
    background-image:
      radial-gradient(transparent 1px, rgba(12,12,18,0.4) 1px),
      radial-gradient(transparent 1px, rgba(12,12,18,0.4) 1px);
    background-size: 24px 24px, 24px 24px;
    background-position: 0 0, 12px 12px;
  }
  .chip {
    @apply inline-flex items-center rounded px-2 py-0.5 text-[10px] font-mono tracking-wide;
  }
  .chip-green { 
    background-color: rgba(34, 197, 94, 0.1);
    color: rgb(22, 163, 74);
    border: 1px solid rgba(34, 197, 94, 0.3);
  }
  .chip-cyan { 
    background-color: rgba(59, 130, 246, 0.1);
    color: rgb(37, 99, 235);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }
  .chip-amber { 
    background-color: rgba(245, 158, 11, 0.1);
    color: rgb(217, 119, 6);
    border: 1px solid rgba(245, 158, 11, 0.3);
  }
  .chip-red { 
    background-color: rgba(239, 68, 68, 0.1);
    color: rgb(220, 38, 38);
    border: 1px solid rgba(239, 68, 68, 0.3);
  }
  .chip-blue { 
    background-color: rgba(59, 130, 246, 0.1);
    color: rgb(37, 99, 235);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  /* Flicker for headers (very subtle) */
  @keyframes scanline {
    0%, 100% { opacity: 1; }
    50% { opacity: .92; }
  }
  .flicker { animation: scanline 4s linear infinite; }
  details[open] summary .caret { transform: rotate(90deg); }
  summary::-webkit-details-marker { display: none; }
</style>


<Base title="Technical Archives — LOSS DISFUNCTION" description="Declassified CSN papers, recovered logs, and Seed Protocol fragments.">
  <section class="relative overflow-hidden min-h-screen" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
    <BackgroundMist />

    <div class="container relative z-10 mx-auto max-w-4xl py-12">
      <h1 class="text-4xl font-bold mb-2" style="color: #1f2937;">Technical Archives</h1>
      <p class="mb-8" style="color: #6b7280;">Declassified documents, recovered logs, and fragments related to the <span style="color: #3b82f6;">C.Y.E.D. / "Seed Protocol"</span>. Treat as unstable source material.</p>

      <div class="space-y-4">
        {archives.map(async (entry) => {
          const { Content } = await entry.render();
          return (
          <details class="group rounded-xl border border-gray-200 bg-white/90 backdrop-blur p-4 open:shadow-lg open:shadow-blue-900/10 transition-shadow" id={entry.slug}>
            <summary class="flex cursor-pointer items-start justify-between gap-4">
              <div>
                <div class="flex flex-wrap items-center gap-2">
                  <span class="text-lg font-semibold" style="color: #1f2937;">{entry.data.title}</span>
                  <span class="chip chip-cyan">{entry.data.year}</span>
                  <span class={`chip ${
                    entry.data.classification === "RESTRICTED" ? "chip-red" :
                    entry.data.classification === "CONFIDENTIAL" ? "chip-amber" :
                    entry.data.classification === "INTERNAL" ? "chip-blue" :
                    "chip-green"}`}>
                    {entry.data.classification}
                  </span>
                  <span class="chip chip-green">{entry.data.status}</span>
                </div>
                <div class="text-xs mt-1" style="color: #6b7280;">
                  ID: {entry.data.id} • Slug: /archives/{entry.slug}
                  {entry.data.integrity && ` • Integrity: ${entry.data.integrity}%`}
                  {entry.data.recoveredFrom && ` • Recovered from: ${entry.data.recoveredFrom}`}
                </div>
                {entry.data.authors && (
                  <div class="text-xs mt-1" style="color: #6b7280;">
                    Authors: {entry.data.authors.join(", ")}
                  </div>
                )}
              </div>
              <div class="caret mt-1 transition-transform" style="color: #3b82f6;">▸</div>
            </summary>

            <div class="prose prose-invert max-w-none mt-4">
              <Content />
              <div class="mt-4 flex items-center gap-3 text-xs text-muted">
                <span class="chip chip-cyan">Recovered .PDF // Simulated</span>
                <a href={`#${entry.slug}`} class="text-cyan hover:text-violet transition">Permalink</a>
              </div>
            </div>
          </details>
          );
        })}
      </div>

      <footer class="mt-12 border-t border-gray-200 pt-6 text-xs" style="color: #6b7280;">
        Recovered Fileset: <span style="color: #3b82f6;">2067–2072</span> • Integrity uncertain • Handle with care.
      </footer>
    </div>
  </section>
</Base>
