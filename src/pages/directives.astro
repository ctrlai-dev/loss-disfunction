---
import Base from "@/layouts/Base.astro";
import { getCollection } from "astro:content";

// Load directives collection, sort by ID
const allDirectives = await getCollection("directives");
const directives = allDirectives.sort((a, b) => a.data.id.localeCompare(b.data.id));

// Pre-render all directive content
const directivesWithContent = await Promise.all(
  directives.map(async (directive) => ({
    ...directive,
    renderedContent: await directive.render()
  }))
);
---

<Base title="CSN Directives — LOSS DISFUNCTION" description="Civil Synthesis Network regulatory documents, directives, and public health bulletins.">
  <section class="relative overflow-hidden min-h-screen" style="background: #f5f5f5;">
    <!-- Floating Menu -->
    <nav class="floating-menu">
      <h3 class="menu-title">Directives</h3>
      <ul class="menu-list">
        {directivesWithContent.map((directive, index) => (
          <li>
            <a href={`#directive-${index}`} class="menu-item">{directive.data.id}: {directive.data.title.substring(0, 40)}{directive.data.title.length > 40 ? '...' : ''}</a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="document-container">
      {directivesWithContent.map((directive, index) => (
        <article class="directive-document" id={`directive-${index}`}>
          <!-- Document Header -->
          <header class="document-header">
            <h1 class="document-title">{directive.data.title}</h1>
            <div class="document-meta">
              <span class="meta-item">ID: {directive.data.id}</span>
              <span class="meta-item">Category: {directive.data.category}</span>
              <span class="meta-item">Year: {directive.data.year}</span>
              <span class="meta-item">Status: {directive.data.status}</span>
              <span class="meta-item">Classification: {directive.data.classification}</span>
              {directive.data.issuedBy && <span class="meta-item">Issued By: {directive.data.issuedBy}</span>}
            </div>
          </header>

          <!-- Document Body -->
          <div class="document-body">
            <directive.renderedContent.Content />
          </div>

          <!-- Document Footer -->
          <footer class="document-footer">
            <p>CSN Official Document • Classification: {directive.data.classification} • {directive.data.year}</p>
            <p>Civil Synthesis Network • All Rights Reserved</p>
          </footer>
        </article>
      ))}
    </div>
  </section>
</Base>

<style>
  /* Floating Menu */
  .floating-menu {
    position: fixed;
    left: 20px;
    top: 100px;
    width: 250px;
    background: white;
    border: 2px solid #333;
    box-shadow: 4px 4px 8px rgba(0,0,0,0.2);
    max-height: calc(100vh - 120px);
    overflow-y: auto;
    z-index: 100;
  }

  .menu-title {
    padding: 1rem;
    margin: 0;
    background: #333;
    color: white;
    font-size: 1rem;
    font-weight: bold;
    text-transform: uppercase;
    font-family: 'Arial', sans-serif;
  }

  .menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .menu-item {
    display: block;
    padding: 0.75rem 1rem;
    color: #000;
    text-decoration: none;
    border-bottom: 1px solid #e0e0e0;
    font-size: 0.85rem;
    font-family: 'Arial', sans-serif;
  }

  .menu-item:hover {
    background: #f0f0f0;
  }

  .document-container {
    max-width: 900px;
    margin: 0 auto 0 280px;
    padding: 3rem 2rem;
  }

  .directive-document {
    background: white;
    padding: 60px;
    margin-bottom: 60px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    scroll-margin-top: 120px;
  }

  .document-header {
    border-bottom: 3px solid #000;
    padding-bottom: 1.5rem;
    margin-bottom: 3rem;
  }

  .document-title {
    font-size: 2rem;
    font-weight: bold;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: 'Arial', sans-serif;
    color: #000;
    line-height: 1.3;
  }

  .document-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    font-size: 0.9rem;
    color: #666;
    font-family: 'Courier New', monospace;
  }

  .meta-item {
    border-right: 1px solid #ccc;
    padding-right: 1rem;
  }

  .meta-item:last-child {
    border-right: none;
  }

  .document-body {
    font-size: 12pt;
    line-height: 1.7;
    color: #000;
    font-family: 'Georgia', 'Times New Roman', serif;
  }

  .document-body p {
    margin: 1.25rem 0;
    text-align: left;
  }

  .document-body h2 {
    font-size: 1.35rem;
    font-weight: bold;
    margin: 3.5rem 0 1.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    border-bottom: 2px solid #000;
    padding-bottom: 0.75rem;
    font-family: 'Arial', sans-serif;
    color: #000;
  }

  .document-body h3 {
    font-size: 1.15rem;
    font-weight: bold;
    margin: 2.5rem 0 1rem 0;
    font-style: normal;
    font-family: 'Arial', sans-serif;
    color: #000;
  }

  .document-body h4 {
    font-size: 1.05rem;
    font-weight: bold;
    margin: 1.5rem 0 0.75rem 0;
    font-family: 'Arial', sans-serif;
    color: #000;
  }

  .document-body strong {
    font-weight: bold;
  }

  .document-body em {
    font-style: italic;
  }

  .document-body ul, .document-body ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .document-body li {
    margin: 0.5rem 0;
  }

  .document-body blockquote {
    margin: 1.5rem 0;
    padding: 1rem 2rem;
    border-left: 4px solid #000;
    background: #f9f9f9;
    font-style: italic;
  }

  .document-footer {
    border-top: 2px solid #000;
    padding-top: 1rem;
    margin-top: 3rem;
    text-align: center;
    font-size: 0.85rem;
    color: #666;
  }

  .document-footer p {
    margin: 0.25rem 0;
    text-align: center;
  }

  @media print {
    .directive-document {
      box-shadow: none;
      margin-bottom: 0;
      page-break-after: always;
    }
  }
</style>
