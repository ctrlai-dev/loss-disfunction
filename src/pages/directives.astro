---
import Base from "@/layouts/Base.astro";
import BackgroundMist from "@/components/BackgroundMist.astro";
import { getCollection } from "astro:content";

// Load directives collection, sort by ID
const allDirectives = await getCollection("directives");
const directives = allDirectives.sort((a, b) => a.data.id.localeCompare(b.data.id));

// Pre-render all directive content
const directivesWithContent = await Promise.all(
  directives.map(async (directive) => ({
    ...directive,
    renderedContent: await directive.render()
  }))
);

// Group by category
const terraformicDirectives = directivesWithContent.filter(d => d.data.category === "Terraformic Regulation");
const governanceDirectives = directivesWithContent.filter(d => d.data.category === "Cultural-Neural Infrastructure");
const healthDirectives = directivesWithContent.filter(d => d.data.category === "Bio-Alignment Directorate" || d.data.category === "Public Health");
---

<style>
  .grid-bg {
    background-image:
      radial-gradient(transparent 1px, rgba(12,12,18,0.4) 1px),
      radial-gradient(transparent 1px, rgba(12,12,18,0.4) 1px);
    background-size: 24px 24px, 24px 24px;
    background-position: 0 0, 12px 12px;
  }
  .chip {
    @apply inline-flex items-center rounded px-2 py-0.5 text-[10px] font-mono tracking-wide;
  }
  .chip-green { 
    background-color: rgba(20, 83, 45, 0.3);
    color: rgb(134, 239, 172);
    border: 1px solid rgba(21, 128, 61, 0.5);
  }
  .chip-cyan { 
    background-color: rgba(19, 78, 74, 0.3);
    color: rgb(94, 234, 212);
    border: 1px solid rgba(15, 118, 110, 0.5);
  }
  .chip-amber { 
    background-color: rgba(113, 63, 18, 0.3);
    color: rgb(252, 211, 77);
    border: 1px solid rgba(180, 83, 9, 0.5);
  }
  .chip-red { 
    background-color: rgba(127, 29, 29, 0.3);
    color: rgb(252, 165, 165);
    border: 1px solid rgba(185, 28, 28, 0.5);
  }
  .chip-blue { 
    background-color: rgba(30, 58, 138, 0.3);
    color: rgb(147, 197, 253);
    border: 1px solid rgba(29, 78, 216, 0.5);
  }
  @keyframes scanline {
    0%, 100% { opacity: 1; }
    50% { opacity: .92; }
  }
  .flicker { animation: scanline 4s linear infinite; }
  details[open] summary .caret { transform: rotate(90deg); }
  summary::-webkit-details-marker { display: none; }

  /* Enhanced Typography for Readability */
  .directive-content {
    /* Optimal reading line length (65 characters) */
    max-width: 65ch;
    margin: 0 auto;
    
    /* Typography scale */
    font-size: 16px;
    line-height: 1.6;
    color: #e5e7eb;
    
    /* Improved spacing */
    margin-bottom: 2rem;
  }

  .directive-content h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    font-weight: 700;
    margin: 2rem 0 1rem 0;
    color: #f3f4f6;
    border-bottom: 2px solid rgba(94, 234, 212, 0.3);
    padding-bottom: 0.5rem;
  }

  .directive-content h2 {
    font-size: 1.875rem;
    line-height: 1.3;
    font-weight: 600;
    margin: 2rem 0 1rem 0;
    color: #f3f4f6;
  }

  .directive-content h3 {
    font-size: 1.5rem;
    line-height: 1.4;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
    color: #e5e7eb;
  }

  .directive-content h4 {
    font-size: 1.25rem;
    line-height: 1.4;
    font-weight: 600;
    margin: 1.25rem 0 0.5rem 0;
    color: #d1d5db;
  }

  .directive-content p {
    margin: 1rem 0;
    line-height: 1.6;
    color: #d1d5db;
  }

  .directive-content ul, .directive-content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
    line-height: 1.6;
  }

  .directive-content li {
    margin: 0.5rem 0;
    color: #d1d5db;
  }

  .directive-content blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid #5eead4;
    background: rgba(94, 234, 212, 0.1);
    font-style: italic;
    color: #e5e7eb;
  }

  .directive-content code {
    background: rgba(0, 0, 0, 0.3);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    color: #5eead4;
  }

  .directive-content pre {
    background: rgba(0, 0, 0, 0.5);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid rgba(94, 234, 212, 0.2);
  }

  .directive-content pre code {
    background: none;
    padding: 0;
    color: #e5e7eb;
  }

  .directive-content strong {
    color: #f3f4f6;
    font-weight: 600;
  }

  .directive-content em {
    color: #d1d5db;
    font-style: italic;
  }

  .directive-content hr {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(94, 234, 212, 0.3), transparent);
    margin: 2rem 0;
  }

  .directive-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .directive-content th, .directive-content td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(94, 234, 212, 0.2);
  }

  .directive-content th {
    background: rgba(94, 234, 212, 0.1);
    font-weight: 600;
    color: #f3f4f6;
  }

  .directive-content td {
    color: #d1d5db;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .directive-content {
      font-size: 15px;
      padding: 0 1rem;
    }
    
    .directive-content h1 {
      font-size: 1.875rem;
    }
    
    .directive-content h2 {
      font-size: 1.5rem;
    }
    
    .directive-content h3 {
      font-size: 1.25rem;
    }
  }

  /* Focus states for accessibility */
  details:focus-within {
    outline: 2px solid rgba(94, 234, 212, 0.5);
    outline-offset: 2px;
  }

  summary:focus {
    outline: 2px solid rgba(94, 234, 212, 0.5);
    outline-offset: 2px;
  }
</style>

<Base title="CSN Directives — LOSS DISFUNCTION" description="Civil Synthesis Network regulatory documents, directives, and public health bulletins.">
  <section class="relative overflow-hidden min-h-screen grid-bg">
    <BackgroundMist />

    <div class="container relative z-10 mx-auto max-w-4xl py-12">
      <h1 class="text-4xl font-bold page-h1 mb-2 flicker">CSN Directives</h1>
      <p class="text-muted mb-8">Official Civil Synthesis Network regulatory documents, directives, and public health bulletins. <span class="text-cyan">Active as of 2070</span>.</p>

      <!-- Terraformic Regulation Directives -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold text-ink mb-6 flex items-center gap-3">
          <span class="chip chip-green">TERRAFORMIC REGULATION</span>
          Environmental & Atmospheric Control
        </h2>
        
        <div class="space-y-4">
          {terraformicDirectives.map((directive) => (
            <details class="group rounded-xl border border-[#1a1a26] bg-[#0b0b12]/80 backdrop-blur p-4 open:shadow-lg open:shadow-cyan-900/10 transition-shadow">
              <summary class="flex cursor-pointer items-start justify-between gap-4">
                <div>
                  <div class="flex flex-wrap items-center gap-2">
                    <span class="text-lg font-semibold text-ink">{directive.data.title}</span>
                    <span class="chip chip-cyan">{directive.data.year}</span>
                    <span class={`chip ${
                      directive.data.classification === "RESTRICTED" ? "chip-red" :
                      directive.data.classification === "CONFIDENTIAL" ? "chip-amber" :
                      directive.data.classification === "INTERNAL" ? "chip-blue" :
                      "chip-green"}`}>
                      {directive.data.classification}
                    </span>
                    <span class="chip chip-green">{directive.data.status}</span>
                  </div>
                  <div class="text-xs text-muted mt-1">
                    ID: {directive.data.id} • Category: {directive.data.category}
                    {directive.data.issuedBy && ` • Issued by: ${directive.data.issuedBy}`}
                  </div>
                </div>
                <div class="caret mt-1 text-cyan transition-transform">▸</div>
              </summary>

              <div class="prose prose-invert max-w-none mt-4">
                <div class="directive-content">
                  <directive.renderedContent.Content />
                </div>
                <div class="mt-4 flex items-center gap-3 text-xs text-muted">
                  <span class="chip chip-cyan">CSN Official Document</span>
                  <span class="chip chip-green">Public Distribution</span>
                </div>
              </div>
            </details>
          ))}
        </div>
      </div>

      <footer class="mt-12 border-t border-[#1a1a26] pt-6 text-xs text-muted">
        Civil Synthesis Network • <span class="text-cyan">Active Directives 2070</span> • Compliance Mandatory
      </footer>
    </div>
  </section>
</Base>