---
import Base from "@/layouts/Base.astro";
import { getCollection } from "astro:content";

// Load directives collection, sort by ID
const allDirectives = await getCollection("directives");
const directives = allDirectives.sort((a, b) => a.data.id.localeCompare(b.data.id));

// Pre-render all directive content
const directivesWithContent = await Promise.all(
  directives.map(async (directive) => ({
    ...directive,
    renderedContent: await directive.render()
  }))
);
---

<Base title="CSN Directives — LOSS DISFUNCTION" description="Civil Synthesis Network regulatory documents, directives, and public health bulletins.">
  <section class="relative overflow-hidden min-h-screen" style="background: #f5f5f5; padding: 0;">
    <!-- Floating Menu -->
    <nav class="floating-menu">
      <h3 class="menu-title">Directives</h3>
      <ul class="menu-list">
        {directivesWithContent.map((directive, index) => (
          <li>
            <a href={`#directive-${index}`} class="menu-item">{directive.data.id}: {directive.data.title.substring(0, 35)}{directive.data.title.length > 35 ? '...' : ''}</a>
          </li>
        ))}
      </ul>
    </nav>

    <div class="document-container">
      {directivesWithContent.map((directive, index) => (
        <article class="directive-document" id={`directive-${index}`}>
          <!-- Document Header -->
          <header class="document-header">
            <div class="document-title">{directive.data.title}</div>
            <div class="document-meta">
              <span class="meta-item">ID: {directive.data.id}</span>
              <span class="meta-item">Category: {directive.data.category}</span>
              <span class="meta-item">Year: {directive.data.year}</span>
              <span class="meta-item">Status: {directive.data.status}</span>
              <span class="meta-item">Classification: {directive.data.classification}</span>
              {directive.data.issuedBy && <span class="meta-item">Issued By: {directive.data.issuedBy}</span>}
            </div>
          </header>

          <!-- Document Body -->
          <div class="document-body">
            <directive.renderedContent.Content />
          </div>

          <!-- Document Footer -->
          <footer class="document-footer">
            <p>CSN Official Document • Classification: {directive.data.classification} • {directive.data.year}</p>
            <p>Civil Synthesis Network • All Rights Reserved</p>
          </footer>
        </article>
      ))}
    </div>
  </section>
</Base>

<style>
  /* Floating Menu */
  .floating-menu {
    position: fixed;
    left: 20px;
    top: 100px;
    width: 250px;
    background: white;
    border: 2px solid #333;
    box-shadow: 4px 4px 8px rgba(0,0,0,0.2);
    max-height: calc(100vh - 120px);
    overflow-y: auto;
    z-index: 100;
  }

  .menu-title {
    padding: 1rem;
    margin: 0;
    background: #333;
    color: white;
    font-size: 1rem;
    font-weight: bold;
    text-transform: uppercase;
    font-family: Arial, sans-serif;
  }

  .menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .menu-item {
    display: block;
    padding: 0.75rem 1rem;
    color: #000;
    text-decoration: none;
    border-bottom: 1px solid #e0e0e0;
    font-size: 0.85rem;
    font-family: Arial, sans-serif;
  }

  .menu-item:hover {
    background: #f0f0f0;
  }

  .document-container {
    max-width: 210mm;
    margin: 0 auto 0 280px;
    padding: 0;
    background: #f5f5f5;
  }

  .directive-document {
    background: white;
    width: 210mm;
    min-height: 297mm;
    margin: 20px auto;
    padding: 25mm 20mm;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    scroll-margin-top: 120px;
  }

  .document-header {
    border-bottom: 3px solid #000;
    padding-bottom: 15pt;
    margin-bottom: 30pt;
  }

  .document-title {
    font-size: 18pt;
    font-weight: bold;
    margin: 0 0 12pt 0;
    padding: 12pt 0 0 0;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    font-family: Arial, sans-serif;
    color: #000;
    line-height: 1.3;
    display: block;
  }

  .document-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 9pt;
    color: #333;
    font-family: 'Courier New', monospace;
  }

  .meta-item {
    border-right: 1px solid #999;
    padding-right: 1rem;
  }

  .meta-item:last-child {
    border-right: none;
  }

  .document-body {
    font-size: 10pt;
    line-height: 1.5;
    color: #000;
    font-family: Georgia, 'Times New Roman', serif;
  }

  .document-body p {
    margin: 0 0 12pt 0;
    text-align: left;
    orphans: 3;
    widows: 3;
  }

  .document-body h1 {
    font-size: 13pt;
    font-weight: bold;
    margin: 24pt 0 8pt 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1pt solid #000;
    padding-bottom: 3pt;
    font-family: Arial, sans-serif;
    color: #000;
    page-break-after: avoid;
  }

  .document-body h2 {
    font-size: 11pt;
    font-weight: bold;
    margin: 18pt 0 6pt 0;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    font-family: Arial, sans-serif;
    color: #000;
    page-break-after: avoid;
  }

  .document-body h3 {
    font-size: 10pt;
    font-weight: bold;
    margin: 14pt 0 4pt 0;
    font-style: italic;
    font-family: Arial, sans-serif;
    color: #000;
    page-break-after: avoid;
  }

  .document-body h4 {
    font-size: 10pt;
    font-weight: bold;
    margin: 14pt 0 4pt 0;
    font-family: Arial, sans-serif;
    color: #000;
    page-break-after: avoid;
  }

  .document-body strong {
    font-weight: bold;
  }

  .document-body em {
    font-style: italic;
  }

  .document-body ul, 
  .document-body ol {
    margin: 12pt 0;
    padding-left: 20pt;
  }

  .document-body li {
    margin: 4pt 0;
  }

  .document-body blockquote {
    margin: 12pt 0;
    padding: 8pt 16pt;
    border-left: 3pt solid #666;
    background: #f9f9f9;
    font-style: italic;
  }

  .document-body table {
    width: 100%;
    border-collapse: collapse;
    margin: 12pt 0;
    font-size: 9pt;
  }

  .document-body th,
  .document-body td {
    padding: 6pt;
    border: 1pt solid #ddd;
    text-align: left;
  }

  .document-body th {
    background: #f0f0f0;
    font-weight: bold;
  }

  .document-footer {
    border-top: 2pt solid #000;
    padding-top: 10pt;
    margin-top: 30pt;
    text-align: center;
    font-size: 8pt;
    color: #666;
    page-break-inside: avoid;
  }

  .document-footer p {
    margin: 2pt 0;
    text-align: center;
  }

  @media print {
    .floating-menu {
      display: none;
    }
    
    .directive-document {
      box-shadow: none;
      margin: 0;
      page-break-after: always;
    }
    
    .document-body {
      orphans: 3;
      widows: 3;
    }
  }

  @media screen {
    .directive-document {
      margin-bottom: 40px;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .floating-menu {
      display: none;
    }

    .document-container {
      margin: 0;
      padding: 1rem;
      max-width: 100%;
    }

    .directive-document {
      width: 100%;
      min-height: auto;
      padding: 15mm 10mm;
      margin: 0 0 20px 0;
    }

    .document-title {
      font-size: 14pt;
    }

    .document-meta {
      font-size: 8pt;
      gap: 0.5rem;
    }

    .document-body {
      font-size: 9pt;
    }

    .document-body h1 {
      font-size: 11pt;
    }

    .document-body h2 {
      font-size: 10pt;
    }

    .document-body h3 {
      font-size: 9pt;
    }
  }
</style>
